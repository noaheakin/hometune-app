<br><h2>Create Profile</h2>
<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br><br>

    <%= f.label :bio %>
    <%= f.text_area :bio %><br><br>

    <%= f.submit %>
<% end %>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p><%= error %></p>
    <%end%>
<%end%>