<h1>Artists</h1><br><br><br>

<h3>Sort by:</h3>
<div class="artist_sort_options">
<%= button_to "Alphabetized", alphabetized_artist_button_path, method: :post%>
<%= button_to "Most Popular", most_popular_artist_button_path, method: :post%>
<%= button_to "Least Popular", least_popular_artist_button_path, method: :post%>
<%= button_to "Genre", by_genre_artist_button_path, method: :post%>
</div><br><br>

<% @artists.each do |artist| %>
    <div class="image_container">
        <img src=<%= artist.img_url %>>
    </div>
    <h2><%= link_to artist.name, artist %></h2>
    <h3>Genre: <%= artist.genre %></h3>
    <br><hr class="divider" width="500px" align="left" ><br><br>
    
<% end %>

